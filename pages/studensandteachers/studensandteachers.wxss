.studentsandteachers {
  background-color: #e4e8ea;
}
.studentsandteachers .firstintroduction {
  background-color: #fff;
  border: 1px #e4e8ea solid;
  padding-top: 5px;
  padding-bottom: 5px;
}
.studentsandteachers .firstintroduction .introduction .num {
  margin: 0 auto;
  width: 50px;
  height: 50px;
  border: 2px #32c5d2 solid;
  color: #32c5d2;
  border-radius: 50%;
  padding: 12.5px 17px;
}
.studentsandteachers .firstintroduction .introduction .basicinfowrap .basicinfo {
  color: #32c5d2;
  text-align: center;
}
.studentsandteachers .content {
  background-color: #fff;
  margin-top: 10px;
}
.studentsandteachers .content .students .drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.studentsandteachers .content .students .hiddencontent {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -200px 50rpx 0 45rpx;
  border-radius: 3px;
}
.studentsandteachers .content .students .hiddencontent .dialog {
  height: 400px;
  overflow-y: scroll;
  /*超出父盒子高度可滚动*/
}
.studentsandteachers .content .students .hiddencontent .dialog .changemodule .title {
  text-align: center;
}
.studentsandteachers .content .students .hiddencontent .dialog .changemodule .contentinner .form-group .inputname {
  border: 2px #e4e8ea solid;
}
.studentsandteachers .content .students .hiddencontent .dialog .changemodule .contentinner .btn {
  padding-top: 10px;
  padding-bottom: 10px;
  background-color: #fff;
}
.studentsandteachers .content .students .hiddencontent .dialog .changemodule .contentinner .btn .submit {
  padding-bottom: 5px;
}
.studentsandteachers .content .students .table {
  overflow-x: scroll;
}
.studentsandteachers .content .students .table .tablehead .tabletr {
  display: flex;
  white-space: nowrap;
  padding-top: 5px;
  padding-bottom: 5px;
}
.studentsandteachers .content .students .table .tablehead .tabletr .th {
  padding-left: 3px;
  padding-right: 16px;
}
.studentsandteachers .content .students .table .tablebody .tabletd {
  white-space: nowrap;
  display: flex;
  padding-left: 3px;
  padding-right: 16px;
  padding-bottom: 10px;
}
.studentsandteachers .content .students .table .tablebody .tabletd view {
  padding-left: 3px;
  padding-right: 16px;
}
