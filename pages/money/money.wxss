.createexercise {
  background-color: #e4e8ea;
}
.createexercise .first {
  background-color: #fff;
  border: 1px #e4e8ea solid;
  padding-top: 5px;
  padding-bottom: 5px;
}
.createexercise .first .introduction .num {
  margin: 0 auto;
  width: 50px;
  height: 50px;
  border: 2px #32c5d2 solid;
  color: #32c5d2;
  border-radius: 50%;
  padding: 12.5px 17px;
}
.createexercise .first .introduction .basicinfo {
  color: #32c5d2;
  text-align: center;
}
.createexercise .information {
  background-color: #fff;
  margin-top: 10px;
}
.createexercise .information .form-group {
  display: flex;
}
.createexercise .information .table-scrollable .moneytable {
  overflow-x: scroll;
}
.createexercise .information .table-scrollable .moneytable .tablethead {
  display: flex;
  white-space: nowrap;
  border-bottom: 1px #e4e8ea solid;
}
.createexercise .information .table-scrollable .moneytable .tablethead .text-center2 {
  padding-left: 20px;
}
.createexercise .information .table-scrollable .moneytable .tablebody .yewumoney {
  white-space: nowrap;
  display: flex;
  border-bottom: 1px #e4e8ea solid;
  padding-bottom: 5px;
  padding-top: 5px;
}
.createexercise .form-group2 {
  background-color: #fff;
  margin-top: 10px;
}
.createexercise .form-group2 .submit {
  padding-top: 10px;
  padding-bottom: 10px;
}
